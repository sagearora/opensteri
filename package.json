{
  "name": "opensteri",
  "version": "1.0.0",
  "description": "Open-source sterilization logging tool for dental and medical clinics",
  "main": "index.js",
  "repository": "git@github.com-sagearora:sagearora/opensteri.git",
  "author": "saj@aroradental.com",
  "license": "GNU_v3",
  "scripts": {
    "start": "node dist/index.js",
    "predev": "npm run swagger",
    "prebuild": "npm run swagger",
    "swagger": "tsoa spec-and-routes",
    "dev": "concurrently \"nodemon src/index.ts\" \"nodemon -x tsoa spec-and-routes\"",
    "build": "tsc -p ."
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts",
    "exec": "ts-node ./src/index.ts"
  },
  "dependencies": {
    "better-sqlite3": "^8.6.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "knex": "^2.5.1",
    "morgan": "^1.10.0",
    "swagger-ui-express": "^5.0.0",
    "tsoa": "^5.1.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/morgan": "^1.9.5",
    "@types/node": "^20.6.2",
    "@types/swagger-ui-express": "^4.1.3",
    "concurrently": "^8.2.1",
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  }
}
